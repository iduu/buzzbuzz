<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :username %><br />
  <%= f.text_field :username, :class => :round_input %></p>

  <p><%= f.label :email %><br />
  <%= f.email_field :email, :class => :round_input %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password, :class => :round_input %></p>

  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :class => :round_input %></p>
  
  <div class="submit_area">
    <p><%= f.submit "注册", :class => :btn_submit %></p>
    <%= render :partial => "devise/shared/links" %>
  </div>
<% end %>

