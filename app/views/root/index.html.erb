			<div class="round_15_bl corner_bl"></div>
			<div class="round_15_br corner_br"></div>
			<div id="feed_list">
			  
			  <% @best.each do |item| %>
				<!--a feed-->
				<div id="feed" class="buzz_feed">
				<!-- corners -->
					<div class="round_10_tl corner_tl"></div>
					<div class="round_10_tr corner_tr"></div>
					<div class="round_10_bl corner_bl"></div>
					<div class="round_10_br corner_br"></div>
					<!-- control bar-->
					<div id="buzz_control" class="buzz_control rate_fav">
						
						
						<a class="btn_up" href="#"></a>
						<p id="buzz_rate" class="buzz_rate"><%= item.score%></p>
						<a class="btn_down" href="#"></a>

					</div>

					<!-- feed content -->
					<div id="buzz_content_holder" class="buzz_content_holder">
						<a id="title" class="buzz_title"><%= item.title %></a>

						</br>

						<a id="author" class="buzz_author"><%= item.author.username %></a>

            <%=t('.post_at')%>
						<span id="time" class="buzz_time"><%= time_ago_in_words(item.created_at) %></span>
						<%=t('.ago')%>

						<p class="buzz_content"><%= item.text %></p>

					</div>



					<div id="buzz_comment" class="buzz_comment">
						嗡(<a href=""><%= item.children.count %></a>)
					</div>

				</div>
				<!--end of a feed-->
        <% end %>
			</div>
		</div>
